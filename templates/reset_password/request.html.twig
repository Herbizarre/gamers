{% extends 'base.html.twig' %}

{% block title %}Réinitialisation de votre mot de passe{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    	<div class="row row-cols-1 row-cols-md-3  mt-3 p-2 justify-content-center">

		<div class="p-3 justify-content-center">

    <h1>Réinitialisation de votre mot de passe</h1>

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div>
            <small>
                Entrez votre adresse e-mail et nous vous enverrons un lien pour réinitialiser votre mot de passe.
            </small>
        </div>

        <button class="btn btn-primary">Envoyer un courriel de réinitialisation du mot de passe</button>
    {{ form_end(requestForm) }}
        </div>
    </div>

{% endblock %}
