{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	{% for flash_error in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
	{% endfor %}

	<div class="row row-cols-1 row-cols-md-3 g-4 mt-3 p-4 justify-content-center text-muted">

		<div class="p-3 bg-opacity-10 border border-start-0 rounded justify-content-center text-muted">

			{{ form_start(registrationForm) }}
			<h1 class="h3 mb-3 font-weight-normal">Inscription</h1>
			{{ form_row(registrationForm.nom) }}
			{{ form_row(registrationForm.prenom) }}
			{{ form_row(registrationForm.email) }}
			{{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
			{{ form_row(registrationForm.agreeTerms) }}

			<button type="submit" class="btn btn btn-block m-3 mt-3" style=" background-color: #8ecae6;">Inscription</button>
			{{ form_end(registrationForm) }}
		</div>
	</div>


{% endblock %}
